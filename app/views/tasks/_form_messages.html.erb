
<div class="row">
  <div class="col-6">
    <%= form_with(model: task) do |f| %>
    
      <% if task.errors.any? %>
          <div id="error_explanation" class="alert alert-warning">
            <ul class="mb-0">
              <% task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
    
      <div class="mb-3">
        <%= f.label :content, 'タスクを入力' %>
        <%= f.text_field :content, class: 'form-control', placeholder: '仕事、課題など' %>
      </div>
      
      <div class="mb-3">
        <%= f.label :status, '状態を入力' %>
        <%= f.text_field :status, class: 'form-control', placeholder: '未着手、進行中など' %>
      </div>
      
      <%= f.submit '登録' %>
    <% end %>
  </div>
</div>