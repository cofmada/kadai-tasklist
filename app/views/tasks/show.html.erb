<h2>タスクNo.<%= @task.id %>の詳細</h2>

  <table class="table text-start my-5">
    <thead>
      <tr>
        <th style="width: 30%">タスク</th>
        <th style="width: 70%">状態</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @task.content %></td>
          <td><%= @task.status %></td>
        </tr>
    </tbody>
  </table>

<%= link_to '編集する', edit_task_path(@task), class: 'btn btn-info' %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>